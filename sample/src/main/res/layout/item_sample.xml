<?xml version="1.0" encoding="utf-8"?>
<com.tr4android.recyclerviewslideitem.RecyclerViewSlideItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:item="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    item:slideBackgroundColor="@color/color_delete"
    item:slideDescription="@string/action_delete"
    item:slideDescriptionColor="@android:color/white"
    item:slideDrawable="@drawable/ic_delete_white_24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:orientation="horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/circle_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="4sp"
                android:text="person@sample.com"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:text="Hi there, try this awesome new library for easily implementing a swipe to dismiss pattern in lists..."
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</com.tr4android.recyclerviewslideitem.RecyclerViewSlideItem>